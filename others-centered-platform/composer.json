{
  "name": "otherscentered/platform",
  "description": "Others Centered Platform plugin for WordPress.",
  "type": "wordpress-plugin",
  "license": "proprietary",

  "require": {
    "php": ">=7.4 <9.0",
    "composer/installers": "^2.0"
  },

  "autoload": {
    "psr-4": {
      "OthersCentered\\Platform\\": "src/"
    }
  },

  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },

  "scripts": {
    "build": [
      "@composer dump-autoload -o"
    ]
  }
}
